# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root =  true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.html]
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
